<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/picsLayout"
    tools:context="com.example.stusupbekov.animeCharactersCatalog.activity.CharacterActivity">

    <ImageView
        android:id="@+id/ivCharacter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/image"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#183cb3"
        android:layout_alignBottom="@+id/ivCharacter"
        android:layout_toEndOf="@+id/ivCharacter"
        android:layout_toRightOf="@+id/ivCharacter"
        android:text="@string/character_name" />
</RelativeLayout>
